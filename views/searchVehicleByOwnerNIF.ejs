<!-- searchVehicleByOwnerNIF.ejs -->
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Search Vehicle by Owner NIF - CarHistoryTracker</title>
    <link rel="stylesheet" href="/styles/mechanicHomepage.css">
</head>
<body>
    <div class="header">
        <h1>CarHistoryTracker</h1>
    </div>

    <div class="background-image">
        <!-- Add your background image here -->
    </div>

    <div class="content-container">
        <div class="content">
            <h2>Search Vehicle by Owner NIF</h2>
            <!-- Your search form goes here -->
            <form action="/mechanicHomepage/search-vehicle-by-owner-nif" method="POST">
                <label for="ownerNIF">Owner NIF:</label>
                <input type="text" id="ownerNIF" name="ownerNIF" required>
                <button type="submit">Search</button>
            </form>

            <!-- Display vehicle information here -->
            <% if (vehicleInfo) { %>
                <div class="vehicle-info">
                    <h3>Vehicle Information:</h3>
                    <p>Make: <%= vehicleInfo.make %></p>
                    <p>Model: <%= vehicleInfo.model %></p>
                    <p>Year: <%= vehicleInfo.year %></p>
                    <p>License Plate: <%= vehicleInfo.license_plate %></p>
                    <p>VIN: <%= vehicleInfo.vin %></p>
                    <p>Imported Vehicle: <%= vehicleInfo.imported_vehicle %></p>
                    <!-- Add more details as needed -->
                </div>
            <% } %>
        </div>
    </div>

    <footer>
        <p class="left">Cherry Waves Studio - Software Solutions</p>
        <p class="right">&copy; 2023 CarHistoryTracker. All rights reserved. Contact us: support@cherrywavesstudio.com</p>
    </footer>
</body>
</html>
