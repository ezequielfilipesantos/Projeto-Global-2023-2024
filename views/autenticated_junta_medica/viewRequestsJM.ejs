<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Ver Pedidos de Avaliação Junta Médica </title>
    <link rel="stylesheet" href="/styles/styles.css">
    <link rel="stylesheet" href="/styles/utente.css">
</head>
<body>
    <header>
        <nav>
          <div class="logo">
            <a href="/index">ACESIPCA</a>
          </div>
          <div class="nav-links">
            <a href="/viewRequestsJM">Ver Pedidos</a>
            <a href="/OutraOpção">Outra Opção
            </a>
          </div>
          <div class="user-info">
            <a href="/logout">Terminar-Sessao</a>
          </div>
        </nav>
      </header>

    <h1>Lista de pedidos de avaliação médica</h1>

    <% if (pedidoAvaliacaoMedicaRecords.length > 0) { %>
        <table>
            <thead>
                <tr>
                    <th>Data do Pedido</th>
                    <th>Localidade do Pedido</th>
                    <th>Tipo de Avaliação</th>
                </tr>
            </thead>
            <tbody>
                <% pedidoAvaliacaoMedicaRecords.forEach(function(record) { %>
                    <tr>
                        <td><%= record.datapedido %></td>
                        <td><%= record.localidadepedido %></td>
                        <td><%= record.tipodeavaliação %></td>
                    </tr>
                <% }); %>
            </tbody>
        </table>
    <% } else { %>
        <p>Nenhum pedido recente encontrado!</p>
    <% } %>

    <a href="/">Regressar</a>
    <footer>
        <p>© 2024 ACESIPCA - Todos os direitos reservados</p>
      </footer>
</body>
</html>
