<!-- evaluateRequest.ejs -->
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Evaluate Request</title>
</head>
<body>
    <h1>Evaluate Request</h1>
    <p>Request ID: <%= pedidoId %></p>
    <!-- Add form elements to input evaluation details -->
    <form action="/evaluate/<%= pedidoId %>" method="post">
        <!-- Add input fields for evaluation details -->
        <label for="evaluationDetails">Evaluation Details:</label>
        <textarea id="evaluationDetails" name="evaluationDetails" rows="4" cols="50"></textarea>
        <br>
        <button type="submit">Submit Evaluation</button>
    </form>
</body>
</html>
