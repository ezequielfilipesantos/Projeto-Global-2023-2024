<!-- evaluateRequest.ejs -->
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Avaliação</title>
</head>
<body>
    <h1>Avaliar Pedido</h1>
    <p>Request ID: <%= pedidoId %></p>
    <form action="/evaluate/<%= pedidoId %>" method="post">
        <label for="evaluationDetails">Detalhes Avaliação:</label>
        <textarea id="evaluationDetails" name="evaluationDetails" rows="4" cols="50"></textarea>
        <br>
        <button type="submit">Submeter Avaliação</button>
    </form>
</body>
</html>
